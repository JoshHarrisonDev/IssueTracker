@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

    <h1>All Roles</h1>
<a asp-action="Create" class="btn btn-secondary">Create a Role</a>
<a asp-action="AssignUserToRole" class="btn btn-primary">Assign Unassigned User to a Role</a>
<a asp-action="ReAssignUserToRole" class="btn btn-success">ReAssign user to a new Role</a>
  
<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Name</th><th>Update</th><th>Delete</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>
                <a asp-action="ViewRole" asp-route-id="@role.Id">@role.Name</a>
            </td>
            
            
            <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
        
    }
    
</table>